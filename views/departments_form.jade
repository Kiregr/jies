form(method="post", action=(id ? "/Departments/Edit": "/Departments/Add"))
    //form(method="post", action="/Departments/Add", id="add_department_form")
    if id
        input(type="hidden", name="id", value="#{id}", id="idOfDepartment")
    p Введите имя:
    input(type="text", name="name", value=(id ? value="#{name}" : ""), id="nameOfDepartment")
    p Выберите главный департамент:
    if id
        select(name='parentId', id="parentIdOfDepartment")
            each department in departments
                if(department.Name == name)
                    option(selected="", value="")  Нет родителя
                if department.Id == parentId
                    option(selected="", value=department.Id) #{department.Name}
                else if department.Id != id
                    option(value=department.Id) #{department.Name}
    else
        select(name='parentId', id="parentIdOfDepartment")
            option(value="") Нет родителя
            each department in departments
                option(value=department.Id) #{department.Name}
    p Введите Inn:
    input(type="text", name="inn", value=(id ? value="#{inn}" : ""), id="innOfDepartment")