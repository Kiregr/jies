form(method="post", action="/Departments/Edit", id="add_department_form")
    input(type="hidden", name="id", value="#{id}")
    p Введите имя:
    input(type="text", name="name", value="#{name}")
    p Выберите главный департамент:
    select(name='parentId')
        each parent in parents
            if(parent.Name == name)
                option(selected="", value="")  Нет родителя
            if parent.Id == parentId
                option(selected="", value=parent.Id) #{parent.Name}
            else if parent.Id != id
                option(value=parent.Id) #{parent.Name}
    p Введите Inn:
    input(type="text", name="inn", value="#{inn}")
    br
    br
    h2 #{parents[0].Name}
    input(type="submit", value="Отправить")